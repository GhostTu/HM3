/*Задача
11. Ако имаме символен низ от символа char str[] = “Hello”;
копирайте всеки един от неговите символи в низ , който да изглежда
огледален на него . Ето така char rts [] = oll е H ”; и принтирайте
резултата*/

#include <stdio.h>

int main(){
    const int length = 20;

    char str[] = "Hello World";
    char temp[length];
    temp[0] = str[4];
    temp[1] = str[3];
    temp[2] = str[2];
    temp[3] = str[1];
    temp[4] = str[0];
    temp[5] = str[5];
    temp[6] = str[6];
    temp[7] = str[7];
    temp[8] = str[8];
    temp[9] = str[9];
    temp[10] = str[10];
    temp[11] = '\0';


    printf("%s\n%s", str, temp);

}
